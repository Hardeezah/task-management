{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types", "./src/types"] // For types
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
